<%- include('header') -%>
    <div class="box">
        <h1 id="heading"><%= listTitle %></h1>
    </div>
    
    <div class="box">
        
        <% newListItems.forEach((listItem) => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" id="" onChange="this.form.submit()" name="checkbox" value="<%= listItem._id %>">
                <p><%= listItem.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
        <% }) %>
        
        <form action="/" method="post" class="item">
            <input type="text" name="newItem" id="" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

    
<%- include('footer') -%>